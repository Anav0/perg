    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable",
            "cargo": {
                "args": [
                    "build",
                    "--bin=perg",
                    "--package=perg"
                ],
                "filter": {
                    "name": "perg",
                    "kind": "bin"
                }
            },
            "args": [
                "-C",
                "2",
                "-g",
                "*.h",
                "-g",
                "*.cpp",
                "-p",
                "void",
                "./test_files",
            ],
            "cwd": "${workspaceFolder}"
        },

    ]
}